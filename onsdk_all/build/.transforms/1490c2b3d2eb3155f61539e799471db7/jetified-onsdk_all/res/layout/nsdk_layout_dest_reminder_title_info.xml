<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/navi_dimens_33dp"
        android:layout_height="@dimen/navi_dimens_33dp"
        android:layout_marginBottom="@dimen/navi_dimens_18dp"
        android:layout_marginLeft="@dimen/nsdk_des_reminder_card_margin_left"
        android:layout_marginRight="@dimen/navi_dimens_7dp"
        android:layout_marginTop="@dimen/navi_dimens_18dp"
        tools:src="@drawable/nsdk_ic_via_arrive_reminder" />

    <LinearLayout
        android:id="@+id/address_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_arrive_label"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/nsdk_des_reminder_title_main_text"
                android:textSize="@dimen/navi_dimens_18dp"
                tools:text="泰美服务区" />

            <TextView
                android:id="@+id/tv_arrive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_main_title"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/navi_dimens_10dp"
                android:layout_marginRight="@dimen/nsdk_des_reminder_card_margin_left"
                android:text="已到达"
                android:textColor="@color/nsdk_rg_common_notification_low_priority_sub_text"
                android:textSize="@dimen/navi_dimens_13dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="@dimen/navi_dimens_180dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/nsdk_rg_common_notification_low_priority_sub_text"
            android:textSize="@dimen/navi_dimens_13dp"
            tools:text="大广高速" />

    </LinearLayout>

</RelativeLayout>
