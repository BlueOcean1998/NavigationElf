<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bnav_rg_main_eta_details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:visibility="visible"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/bnav_rg_toolbox_time_and_dist_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navi_dimens_12dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/bnav_rg_toolbox_remain_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/nsdk_rg_main_info"
            android:textSize="@dimen/navi_dimens_22dp"
            android:textStyle="bold"
            tools:text="剩余8888公里" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bnav_rg_toolbox_remain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/nsdk_rg_main_info"
                android:textSize="@dimen/navi_dimens_22dp"
                android:textStyle="bold"
                tools:text="56小时24分" />

            <TextView
                android:id="@+id/bnav_rg_toolbox_traffic_light_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/nsdk_cl_text_b_mm_title_night"
                android:textSize="@dimen/navi_dimens_22dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/nsdk_rg_toolbox_traffic_light_margin_left"
                android:includeFontPadding="false"
                android:visibility="gone"
                tools:text="5"
                tools:visibility="visible"
                android:drawablePadding="@dimen/navi_dimens_2dp"
                android:drawableLeft="@drawable/nsdk_drawable_toolbox_traffic_light_landscape"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bnav_rg_toolbox_via_time_and_dist_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navi_dimens_8dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/bnav_rg_toolbox_via_arrive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="最近途经点剩余"
            android:textColor="@color/nsdk_rg_main_info"
            android:textSize="@dimen/navi_dimens_16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bnav_rg_toolbox_via_arrive_title"
            android:layout_marginTop="@dimen/navi_dimens_2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bnav_rg_toolbox_via_remain_time_and_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/nsdk_rg_main_info"
                android:textSize="@dimen/navi_dimens_16dp"
                android:textStyle="bold"
                tools:text="1026公里 10小时49分" />


            <TextView
                android:id="@+id/bnav_rg_toolbox_via_traffic_light_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/nsdk_cl_text_b_mm_title_night"
                android:includeFontPadding="false"
                android:textSize="@dimen/navi_dimens_16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="@dimen/nsdk_rg_toolbox_traffic_light_margin_left"
                android:visibility="gone"
                tools:text="5"
                tools:visibility="visible"
                android:drawablePadding="@dimen/navi_dimens_2dp"
                android:drawableLeft="@drawable/nsdk_drawable_toolbox_traffic_light_landscape"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>