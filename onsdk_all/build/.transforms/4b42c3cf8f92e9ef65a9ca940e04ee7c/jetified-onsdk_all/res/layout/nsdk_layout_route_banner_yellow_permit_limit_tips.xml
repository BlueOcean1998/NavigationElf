<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bnav_route_banner_yellow_yaw_bg">

    <LinearLayout
        android:id="@+id/yellow_banner_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yellow_tips_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                tools:textStyle="bold"
                tools:text="已为您避开限行区域"/>
        </LinearLayout>

        <TextView
            android:id="@+id/yellow_tips_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="广州市外地车四开四停限行，请合理安排出行"/>
    </LinearLayout>
    <Button
        android:id="@+id/yellow_tips_permit_limit_btn"
        android:layout_width="52dp"
        android:layout_height="26dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#E7AB6E"
        android:text="可通行"
        android:textSize="13dp"
        android:background="@drawable/nsdk_route_result_yellow_bar_permit_limit_btn_bg"/>

    <ImageView
        android:id="@+id/yellow_tips_close_iv"
        android:layout_width="19dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:layout_marginRight="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:src="@drawable/bnav_route_banner_yellow_tips_close_white"
        tools:visibility="visible"/>
</LinearLayout>