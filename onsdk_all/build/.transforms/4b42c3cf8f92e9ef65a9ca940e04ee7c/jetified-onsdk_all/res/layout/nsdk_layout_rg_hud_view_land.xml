<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roundProgress="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:gravity="center_vertical|center_horizontal"
              android:background="#ff000000">
    <!-- 当前时速 -->
    <RelativeLayout
        android:id="@+id/rl_bnav_rg_hud_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_64dp"
        android:gravity="center"
        android:visibility="visible">
        <FrameLayout
            android:id="@+id/fl_bnav_speed_layout"
            android:layout_width="@dimen/navi_dimens_100dp"
            android:layout_height="@dimen/navi_dimens_100dp">
            <RelativeLayout
                android:id="@+id/rl_bnav_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.baidu.navisdk.ui.routeguide.subview.widget.CircleProgressImageView
                    android:id="@+id/bnav_rg_cur_car_speed_progress"
                    android:layout_width="@dimen/navi_dimens_100dp"
                    android:layout_height="@dimen/navi_dimens_100dp"
                    android:text="速度"
                    android:textColor="#ff000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    roundProgress:bn_fill="false"
                    roundProgress:bn_max="100"
                    roundProgress:bn_progress_paint_width="@dimen/navi_dimens_4dp"
                    roundProgress:bn_paint_color="#D1D1D1"
                    roundProgress:bn_paint_width="@dimen/navi_dimens_1dp"
                    roundProgress:bn_sub_progress_paint_color="#7F1A1A1A"
                    roundProgress:bn_circle_background_color="#CC1A1A1A"
                    roundProgress:bn_circle_fill="true"
                    roundProgress:bn_main_progress_cap_round="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/bnav_rg_current_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/nsdk_text_size_progress_circle_normal"
                        android:textColor="@color/nsdk_rg_main_info"
                        android:text="98"
                        android:textStyle="bold"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bnav_rg_current_speed"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/nsdk_rg_hud_second_info"
                        android:text="km/h"
                    />
                </LinearLayout>
            </RelativeLayout>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前时速"
            android:layout_below="@id/fl_bnav_speed_layout"
            android:layout_marginTop="@dimen/navi_dimens_12dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/nsdk_rg_hud_second_info"/>
    </RelativeLayout>
    <RelativeLayout
