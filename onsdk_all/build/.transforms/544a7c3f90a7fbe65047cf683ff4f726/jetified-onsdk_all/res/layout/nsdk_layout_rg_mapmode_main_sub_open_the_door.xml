<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/navi_dimens_10dp"
    android:layout_marginTop="50dp"
    android:gravity="center_vertical|left">

    <Button
        android:id="@+id/debug_gate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug"
        android:textSize="10sp"/>

    <LinearLayout
        android:id="@+id/debug_gate_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
                android:id="@+id/voice_aid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/navi_dimens_20dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="clearSceneCache"
                android:visibility="gone"
                android:background="#adb"/>

        <TextView
                android:id="@+id/voice_aidResponse"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/navi_dimens_20dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/navi_dimens_20dp"
                android:textColor="#000"
                android:text="修改配置文件"
                android:visibility="gone"
                android:background="#adb"/>
        <TextView
            android:id="@+id/open_the_door"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="Open The Door"
            android:visibility="gone"
            android:background="#adb"/>

        <TextView
            android:id="@+id/stop_tts"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="crash"
            android:visibility="gone"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/show_route_recommend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="show_route"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/show_checkbox_notification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#000"
            android:text="checkbox/\nNotification"
            android:background="#aaddbb"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/brightness_add"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#000"
                android:text=" + "
                android:background="#aaddbb"/>

            <TextView
                android:id="@+id/brightness_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#000"
                android:text="0"
                android:background="#aaddbb"/>

            <TextView
                android:id="@+id/brightness_sub"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#000"
                android:text=" - "
                android:background="#aaddbb"/>
        </LinearLayout>

        <TextView
            android:id="@+id/set_gps_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="debug_gps"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/debug_arrive_dest"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="arrive_dest"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/da_da_da"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="嗒嗒嗒"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/lane_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="车道线"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/ugc_avoid_failed_no_route"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="ugc_no_route"
            android:background="#aaddbb"/>

        <TextView
            android:id="@+id/ugc_dynamic_ugc_event"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_20dp"
            android:gravity="center"
            android:textColor="#000"
            android:visibility="gone"
            android:text="dynamicUgcEvent"
            android:background="#aaddbb"/>

    </LinearLayout>

    <TextView
        android:id="@+id/show_cur_state"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_20dp"
        android:layout_marginTop="@dimen/navi_dimens_20dp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#000"
        android:text="SimpleGuide"
        android:background="#aaddbb"/>
</LinearLayout>
